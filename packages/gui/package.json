{
    "name": "scratch-gui",
    "version": "0.3.0",
    "description": "Graphical User Interface for creating and running Scratch 3.0 projects",
    "author": "Massachusetts Institute of Technology",
    "license": "GPL-3.0",
    "homepage": "https://github.com/LLK/scratch-gui#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/LLK/scratch-gui.git"
    },
    "main": "./dist/scratch-gui.js",
    "scripts": {
        "build": "pnpm run clean && webpack --colors --bail",
        "ci-build": "webpack --colors --bail",
        "clean": "rimraf ./build && mkdirp build && rimraf ./dist && mkdirp dist",
        "prepare": "node scripts/prepublish.mjs",
        "i18n:push": "wlc push --project ampmod --component ampmod-editor-interface --file translations/en.json",
        "i18n:src": "rimraf ./translations/messages/src && babel src > tmp.js && rimraf tmp.js && build-i18n-src ./translations/messages/src ./translations/",
        "start": "webpack-dev-server",
        "test": "pnpm run test:lint && pnpm run test:unit && pnpm run build && pnpm run test:integration",
        "test:integration": "jest --maxWorkers=4 test[\\\\/]integration",
        "test:lint": "eslint . --ext .js,.jsx",
        "test:unit": "jest test[\\\\/]unit[\\\\/]addons",
        "test:smoke": "jest --runInBand test[\\\\/]smoke",
        "watch": "webpack --colors --watch",
        "test-cbp": "NODE_ENV=production IS_CBP_BUILD=true pnpm run build && http-server build/"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@ampmod/branding": "workspace:^",
        "@fontsource/inter": "^5.2.8",
        "@microbit/microbit-universal-hex": "0.2.2",
        "@turbowarp/jszip": "^3.11.1",
        "@turbowarp/nanolog": "^0.2.0",
        "@turbowarp/scratch-l10n": "^3.1001.202405101234",
        "@turbowarp/scratch-storage": "^0.0.202403251715",
        "@turbowarp/scratch-svg-renderer": "^1.0.202505311824",
        "@turbowarp/startaudiocontext": "^1.0.0",
        "arraybuffer-loader": "^1.0.8",
        "autoprefixer": "^9.8.8",
        "balance-text": "3.3.1",
        "base64-loader": "1.0.0",
        "bowser": "^2.12.1",
        "classnames": "2.2.6",
        "computed-style-to-inline-style": "^4.0.0",
        "copy-webpack-plugin": "6.4.1",
        "css-loader": "^1.0.1",
        "dapjs": "2.3.0",
        "get-float-time-domain-data": "0.1.0",
        "immutable": "3.8.2",
        "intl-messageformat": "^2.2.0",
        "js-base64": "2.4.9",
        "keymirror": "0.1.1",
        "lodash.bindall": "4.4.0",
        "lodash.debounce": "4.0.8",
        "lodash.defaultsdeep": "4.6.1",
        "lodash.omit": "4.5.0",
        "lodash.throttle": "4.0.1",
        "modern-normalize": "^3.0.1",
        "omggif": "1.0.9",
        "papaparse": "5.3.0",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "postcss-simple-vars": "^5.0.2",
        "prop-types": "^15.8.1",
        "query-string": "^5.1.1",
        "raw-loader": "^0.5.1",
        "react": "^16.14.0",
        "react-contextmenu": "2.9.4",
        "react-dom": "^16.14.0",
        "react-draggable": "3.0.5",
        "react-intl": "2.9.0",
        "react-modal": "3.9.1",
        "react-popover": "0.5.10",
        "react-redux": "5.0.7",
        "react-responsive": "5.0.0",
        "react-string-replace": "^0.4.4",
        "react-style-proptype": "3.2.2",
        "react-tabs": "2.3.0",
        "react-tooltip": "3.8.0",
        "react-virtualized": "^9.22.6",
        "redux": "3.7.2",
        "redux-throttle": "0.1.1",
        "scratch-audio": "github:TurboWarp/scratch-audio#develop",
        "scratch-blocks": "workspace:^",
        "scratch-paint": "workspace:^",
        "scratch-render": "github:TurboWarp/scratch-render#develop",
        "scratch-vm": "workspace:^",
        "style-loader": "^0.23.1",
        "to-style": "^1.3.3",
        "wav-encoder": "1.3.0",
        "xhr": "2.5.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/core": "^7.28.4",
        "@babel/preset-env": "7.14.8",
        "@babel/preset-react": "7.14.5",
        "@formatjs/cli": "^6.7.4",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.3.0",
        "chromedriver": "117.0.3",
        "compression-webpack-plugin": "^6.1.2",
        "enzyme": "3.10.0",
        "enzyme-adapter-react-16": "1.15.7",
        "eslint": "8.55.0",
        "eslint-config-scratch": "9.0.3",
        "eslint-import-resolver-webpack": "0.11.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jest": "22.17.0",
        "eslint-plugin-react": "7.33.2",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "^4.5.2",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "jest-junit": "7.0.0",
        "mkdirp": "1.0.3",
        "react-test-renderer": "16.14.0",
        "redux-mock-store": "1.5.3",
        "rimraf": "2.7.1",
        "selenium-webdriver": "3.6.0",
        "uglifyjs-webpack-plugin": "1.3.0",
        "url-loader": "4.1.1",
        "web-audio-test-api": "0.5.2",
        "yauzl": "2.10.0"
    },
    "jest": {
        "setupFiles": [
            "raf/polyfill",
            "<rootDir>/test/helpers/enzyme-setup.js"
        ],
        "testPathIgnorePatterns": [
            "src/test.js"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js",
            "editor-msgs(\\.js)?$": "<rootDir>/test/__mocks__/editor-msgs-mock.js"
        }
    },
    "overrides": {
        "webpack@4.47.0": {
            "terser-webpack-plugin": "^4.2.3"
        }
    }
}
